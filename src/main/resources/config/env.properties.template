# =============================================================================
# Environment Configuration Template
# =============================================================================
# INSTRUCTIONS:
# 1. Copy this file to 'env.properties' (which is gitignored)
# 2. Fill in your actual values
# 3. NEVER commit env.properties to version control
# =============================================================================

# Application URLs
BASE_URL=https://your-app-url.com
API_BASE_URL=https://your-api-url.com

# Test Credentials (Use for local testing only)
TEST_USERNAME=your_test_username
TEST_PASSWORD=your_test_password

# API Keys
API_KEY=your_api_key_here
API_SECRET=your_api_secret_here

# Email Configuration (for sending reports)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USERNAME=your_email@gmail.com
EMAIL_PASSWORD=your_app_password
EMAIL_FROM=your_email@gmail.com
EMAIL_TO=recipient@example.com

# Selenium Grid / Remote Execution
SELENIUM_GRID_URL=http://localhost:4444/wd/hub

# Cloud Provider Credentials (BrowserStack/SauceLabs)
BROWSERSTACK_USERNAME=your_browserstack_username
BROWSERSTACK_ACCESS_KEY=your_browserstack_access_key
SAUCELABS_USERNAME=your_saucelabs_username
SAUCELABS_ACCESS_KEY=your_saucelabs_access_key
