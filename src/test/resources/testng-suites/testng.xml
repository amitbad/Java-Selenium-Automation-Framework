<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Complete Test Suite" parallel="classes" thread-count="3" verbose="1">
    
    <listeners>
        <listener class-name="com.automation.listeners.TestListener"/>
    </listeners>
    
    <!-- UI Tests -->
    <test name="UI Tests">
        <groups>
            <run>
                <include name="smoke"/>
                <include name="regression"/>
            </run>
        </groups>
        <classes>
            <class name="com.automation.tests.LoginTest"/>
        </classes>
    </test>
    
    <!-- API Tests -->
    <test name="API Tests">
        <groups>
            <run>
                <include name="smoke"/>
                <include name="regression"/>
            </run>
        </groups>
        <classes>
            <class name="com.automation.tests.api.SampleApiTest"/>
        </classes>
    </test>
    
</suite>
